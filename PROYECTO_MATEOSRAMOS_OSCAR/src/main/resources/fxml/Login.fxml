<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="15"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.oscar.proyecto.controller.ControladorLogin">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="TOP_RIGHT" prefWidth="400">
        <Button text="?" onAction="#mostrarAyuda" styleClass="boton-ayuda"/>
    </HBox>

    <Label text="Iniciar Sesión" styleClass="titulo"/>

    <ImageView fx:id="Logo" fitHeight="150" fitWidth="200" preserveRatio="true">
        <image>
            <Image url="@/images/LogoColegio.png"/>
        </image>
    </ImageView>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Usuario:" styleClass="label"/>
        <TextField fx:id="usuarioField" promptText="Introduce tu usuario"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Contraseña:" styleClass="label"/>

        <HBox spacing="5" alignment="CENTER_LEFT">

           
            <PasswordField fx:id="passwordField" promptText="Introduce tu contraseña"/>

           
            <TextField fx:id="passwordVisibleField" promptText="Introduce tu contraseña"
                       visible="false" managed="false"/>

          
            <ImageView fx:id="togglePasswordIcon"
                       fitHeight="24" fitWidth="24"
                       onMouseClicked="#togglePasswordVisibility">
                <image>
                    <Image url="@/icons/OjoAbierto.png"/>
                </image>
            </ImageView>

        </HBox>
    </VBox>

    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="iniciarSesionButton" text="Iniciar Sesión" styleClass="boton-principal" onAction="#handleIniciarSesion"/>
        <Button fx:id="recuperarPasswordButton" text="Recuperar Contraseña" styleClass="boton-secundario" onAction="#handleRecuperarPassword"/>
    </HBox>

    <Label fx:id="mensajeLabel" styleClass="mensaje-error"/>
</VBox>
